{
  "compilerOptions": {
    "lib": ["dom", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact"
  },
  "permissions": {
    "default": {
      "net": true,
      "read": true
    }
  },
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.21",
    "preact-render-to-string": "npm:preact-render-to-string@^6.6.3",
    "preact": "npm:preact@^10.27.2"
  },
  "tasks": {
    "bundle": "deno bundle --outdir=dist --watch index.html",
    "serve": "deno run -P --watch server.tsx"
  }
}
